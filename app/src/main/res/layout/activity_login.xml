<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.allinone.ip_camera.login.LoginViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/layoutLogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Blue">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="44dp"
            android:src="@mipmap/lens_720" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <!--select platform-->
            <Button
                android:id="@+id/selectPlatform"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="32dp"
                android:onClick="@{()->viewModel.selectPlatform()}"
                android:text="@{viewModel.title}" />

            <!-- Get telephone number automatic -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/hpnicon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="用  户" />

                <EditText
                    android:id="@+id/configusr"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:maxLength="11"
                    tools:text="@{viewModel.account}" />
            </LinearLayout>

            <!-- Input new pwd for reset -->
            <LinearLayout
                android:id="@+id/TablePWD"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/pwdicon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="密  码" />

                <EditText
                    android:id="@+id/configpwd"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword|textWebPassword"
                    android:maxLength="16"
                    android:selectAllOnFocus="true"
                    android:text="@{viewModel.passWord}" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1">

                    <Switch
                        android:id="@+id/tgb_show_pwd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp" />
                </FrameLayout>
            </LinearLayout>

            <!--login action-->
            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="5dp"
                android:text="Login" />

            <!--other button-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/btn_savepwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="记住密码"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/btn_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingTop="5dp"
                    android:text="忘记密码？"
                    android:textSize="14sp"
                    android:textStyle="italic" />
            </RelativeLayout>

            <!-- version text_view -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:focusable="false"
                android:text="1.1.0"
                android:textColor="#6f000000"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>
</layout>