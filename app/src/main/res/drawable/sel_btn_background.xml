<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" >
        <layer-list>
            <item android:top="5dp" android:bottom="5dp" android:left="3dp" android:right="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorPrimaryLess" />
                    <corners android:radius="2dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_enabled="false">
        <layer-list>
            <item android:top="5dp" android:bottom="5dp" android:right="3dp" android:left="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorPrimaryDark" />
                    <corners android:radius="2dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
